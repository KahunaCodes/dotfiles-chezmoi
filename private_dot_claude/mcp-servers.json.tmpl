    "args": [
      "-y",
      "n8n-mcp"
    ],
    "env": {
      "MCP_MODE": "stdio",
      "LOG_LEVEL": "error",
      "DISABLE_CONSOLE_OUTPUT": "true",
      "N8N_API_URL": "http://automation-mac:5678",
      "N8N_API_KEY": "{{ env "N8N_API_KEY" }}"
    }
  },
  "filesystem": {
    "type": "stdio",
