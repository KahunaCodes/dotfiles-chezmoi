# Chezmoi config - auto-generated during init
# Profiles: workstation (main/away), server (automation), minimal (hb)

[data]
{{- $hostname := .chezmoi.hostname }}
{{- $profile := "workstation" }}
{{- $username := .chezmoi.username }}

{{/* Detect profile based on hostname patterns */}}
{{- if or (contains "Homebridge" $hostname) (contains "hb" (lower $hostname)) }}
{{-   $profile = "minimal" }}
{{- else if or (contains "M1" $hostname) (contains "automation" (lower $hostname)) }}
{{-   $profile = "server" }}
{{- end }}

    hostname = {{ $hostname | quote }}
    profile = {{ $profile | quote }}
    username = {{ $username | quote }}
