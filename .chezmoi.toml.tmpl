# Chezmoi config - Two profiles: workstation (everything) or minimal (hb-mac only)
[data]
{{- $hostname := .chezmoi.hostname }}
{{- $profile := "workstation" }}

{{- if or (contains "Homebridge" $hostname) (contains "hb" (lower $hostname)) }}
{{-   $profile = "minimal" }}
{{- end }}

    profile = {{ $profile | quote }}
